<h1>Editing Book</h1>
<% if @book.errors.any? %>
  error!
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
  <div class = "edit-common">
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>
  <div class = "edit-common">
  <h4>Body</h4>
  <%= f.text_area :body %>
  </div>
  <div>
  <%= f.submit 'Update Book' %>
  </div>
  <div class = "link-edit-back">
  <section class = "link"><%= link_to "Show", "/books/#{@book.id}" %></section>
  <section class = "link"><%= link_to "Back", "/books" %></section>
  </div>
  <% end %>
